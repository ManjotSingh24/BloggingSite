<%- include( "partials/header" ) -%>
    <h1>Compose</h1> <!-- form hels us in making post request from browser to server-->
    <form class="" action="/compose" method="post"> <!-- action is the route you are going to handle inside app.js-->
        <!-- post means we are sending data from browser to the server or js file-->
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">

            <label>Post</label>
            <textarea class="form-control" name="postBody" cols="40" rows="5"></textarea>

        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
    <%- include( "partials/footer" ) -%>